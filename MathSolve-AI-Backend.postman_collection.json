			"name": "Google OAuth",
			"item": [
				{
					"name": "Get Google Auth URL",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    console.log('Google Auth URL:', responseJson.data.authUrl);",
									"    pm.environment.set('googleAuthUrl', responseJson.data.authUrl);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/google/url?state=optional-state-parameter",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"google",
								"url"
							],
							"query": [
								{
									"key": "state",
									"value": "optional-state-parameter",
									"description": "Optional state parameter for CSRF protection"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Google OAuth Callback",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    pm.environment.set('accessToken', responseJson.data.accessToken);",
									"    pm.environment.set('userId', responseJson.data.user.id);",
									"    pm.environment.set('isNewUser', responseJson.data.isNewUser);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"code\": \"google-authorization-code-here\"\n}",
							"options": {
								"raw": {
									"description": "Replace 'google-authorization-code-here' with the actual authorization code from Google OAuth callback"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/google/callback",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"google",
								"callback"
							]
						}
					},
					"response": []
				},
